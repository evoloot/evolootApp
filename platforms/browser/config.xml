<?xml version='1.0' encoding='utf-8'?>
<widget id="com.evoloot.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Evoloot</name>
    <description>
        A game application designed for integrating Auction with Facebook.
    </description>
    <author email="" href="">
    </author>
    <content src="index.html" />
    <allow-navigation href="https://parseapi.back4app.com/*" />
    <allow-navigation href="https://*.facebook.net/*" />
    <allow-navigation href="https://*.facebook.com/*" />
    <allow-navigation href="https://use.fontawesome.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>need camera access to take pictures</string>
    </edit-config>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="landscape" />
</widget>
